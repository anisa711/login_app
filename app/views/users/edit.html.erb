<% provide(:title, "Updating Info")%>
<!DOCTYPE html>
<html  ng-app="textInputExample">
<head>
<title>User Page</title>
<link rel="stylesheet" type="text/css" href="page.css">
<script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.0-beta.1/angular.min.js"></script>
</head>

<body>
    <div class="content">
	<div class="banner">
	  <div class="menubar">
		<div class="fb_logo">
		<image src="/assets/images.jpeg" height="60px" alt="facebook image"></h1>
		</div>
		
		<div class="mb_1">
		<p>Home | Profile | <%= link_to "Log out", logout_path, method: "delete" %>
</p>
		
</div>
</div>
</div>
<center>
<h1>Profile Updation</h1><br/><br/>

<%= form_for (@user_update) do |f| -%>
		<% if @user_update.errors.any? %>
		<ul>
        <% @user_update.errors.full_messages.each do |msg| %>
        <li><%= msg %><li>
      <% end -%>
  	</ul>
    <% end -%>
<table align='center' border="0" cellpadding="10" cellspacing="10">
<tr>
<td>
	<%= f.text_field :name, autofocus: true, placeholder: 'First Name', class: 'inputFirstNm' -%>
	<%= f.text_field :lastname, autofocus: true, placeholder: 'Last Name', class: 'inputFirstNm' -%>
</td>
</tr>

<tr>
<td>
<%= f.email_field :email, autofocus: true, placeholder: 'Enter E-mail or Mobile Number', class: 'input' -%>
</td>
</tr>

<tr>
<td>

</td>
</tr>

<tr>
<td>
<%= f.password_field :password, autofocus: true, placeholder: 'New Password', class: 'input' -%>
</td>
</tr>

<tr>
<td>
<%= f.password_field :password_confirmation, autofocus: true, placeholder: 'confirm Password', class: 'input' -%>
</td>
</tr>	

<tr rowspan="2" >
<td colspan="3">
<h5>Birthday</h5>
<%= f.date_select :dob, start_year: 1960 -%>
</td>
</tr>

<tr>
<td>
<%= f.radio_button :gender, "Female" -%><b>Female</b>
<%= f.radio_button :gender, "Male" -%><b>Male</b>
</td>
</tr>

<tr>
<td align="center" colspan="2">
	<%= f.submit "Save Changes", class: "btn_submit"-%>
<!--<button type="submit"  name=" " >Sign Up</button>-->
</td>
</tr>

</table>
<% end -%>
</center>
</body>
</html>

